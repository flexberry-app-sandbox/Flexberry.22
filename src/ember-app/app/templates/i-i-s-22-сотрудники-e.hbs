<h3 class="ui header">{{t "forms.i-i-s-22-сотрудники-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.имя
      class=(if (v-get validationModel "имя" "isInvalid") "error")
      label=(t "forms.i-i-s-22-сотрудники-e.имя-caption")
      data-test-i-i-s-22-сотрудники-e-имя=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "имя" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-22-сотрудники-e.должностиКу-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.должностиКу
      displayAttributeName="имяДол"
      autocomplete=true
      relationName="должностиКу"
      projection="ДолжностиКуL"
      title=(t "forms.i-i-s-22-сотрудники-e.должностиКу-caption")
      readonly=readonly
      componentName="должностиКуLookup"
      class=(if (v-get validationModel "должностиКу" "isInvalid") "error")
      data-test-i-i-s-22-сотрудники-e-должностиКу=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "должностиКу" "message")}}
  </div>
</form>
